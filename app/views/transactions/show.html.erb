<%- model_class = Transaction -%>

<div class="row">
    <div class="col-md-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Resumo da transação</h3>
            </div>
            <div class="box-body">
                <dl class="dl-horizontal">
                  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
                  <dd><%= @transaction.title %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
                  <dd><%= @transaction.description %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
                  <dd><%= @transaction.category %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
                  <dd><%= @transaction.customer_id %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
                  <dd><%= @transaction.product_id %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:total_price) %>:</strong></dt>
                  <dd><%= @transaction.total_price %></dd>
                  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
                  <dd><%= @transaction.price %></dd>
                </dl>
            </div>
            <div class="box-footer">
              <%= link_to t('.back', :default => t("helpers.links.back")),
                transactions_path, :class => 'btn btn-default'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_transaction_path(@transaction), :class => 'btn btn-default' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                transaction_path(@transaction),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>

            </div>
        </div>
    </div>
</div>




