<%- model_class = Customer -%>
<div class="row">
  <div class="col-md-12">
    <div class="box box-warning">
      <div class="box-header with-border">
        <h3 class="box-title">Clientes cadastrados</h3>
        <div class="box-tools">
          <div class="input-group input-group-sm" style="width:120px;">
            <input type="text" name="table_search" class="form-control pull-right" placeholder="Busca">
            <div class="input-group-btn">
              <button type="submit" class="btn btn-default">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:id) %></th>
              <th><%= model_class.human_attribute_name(:name) %></th>
              <th><%= model_class.human_attribute_name(:cpf) %></th>
              <th><%= model_class.human_attribute_name(:gender) %></th>
              <th><%= model_class.human_attribute_name(:birthdate) %></th>
              <th><%= model_class.human_attribute_name(:phone1) %></th>
              <th><%= model_class.human_attribute_name(:phone2) %></th>
              <th><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.name, customer_path(customer) %></td>
                <td><%= customer.cpf %></td>
                <td><%= customer.gender %></td>
                <td><%= customer.birthdate %></td>
                <td><%= customer.phone1 %></td>
                <td><%= customer.phone2 %></td>
                <td>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_customer_path(customer), :class => 'btn btn-default btn-xs' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              customer_path(customer),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
